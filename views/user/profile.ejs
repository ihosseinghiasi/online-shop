<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="/css/user/general.css">
    <link rel="stylesheet" href="/css/user/profile.css">
    <title>‍ پنل کاربر </title>
</head>
<body>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
     integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
     crossorigin="anonymous">
    </script>

    <header>
        <%- include('../components/userNavbar') -%>
    </header>

    <div class="container container-fluid">
        <div class="row">
            <%- include('../components/userRightMenu') -%>

            <script>
                document.getElementById('userProfile').style.backgroundColor = "rgba(24, 1, 4, 0.986)"
                document.getElementById('userProfile').borderRadius = "5px"
            </script>

            <div class="col-10">
                <div class="col-11 mx-5 counter">
                    <div class="titleCounter">
                        <p>پیشخوان  >  پروفایل کاربر</p>
                    </div>
                    <div class="d-flex justify-content-start parsianDate">
                       <p><%= persianDate %></p>
                    </div>
                </div>

                <div class="addAdmin col-11 my-5 mx-5">
                    <%- include('../components/validationError') -%>
                    <div class="addtitle my-3 mx-2 col-8">
                        <img src="/icons/plus-square-black.svg"  alt="ویرایش کاربر">
                        پروفایل کاربر
                    </div>
               
                    <div class="addBody col-8 mx-5">
                        <form action="/admin-cPanel/user/profile/<%= user.id %>?_method=PUT" method="post" class="mx-5">
                            <div class="row col-5 userForm">
                                <div>  
                                    <input type="text" class="form-control mt-3"  placeholder="نام" name="firstName"
                                     value="<%= user.firstName %>">
                                    <input type="text" class="form-control mt-3"  placeholder="نام خانوادگی" name="lastName"
                                     value="<%= user.lastName %>">
                                    <input type="email" class="form-control mt-3"  placeholder="ایمیل" name="email"
                                     value="<%= user.email %>">
                                    <input type="text" class="form-control mt-3"  placeholder="شماره همراه" name="phone" 
                                     value="<%= user.phone %>">
                                     <input type="password" class="form-control mt-3 enField"
                                     placeholder="کلمه عبور" name="password" id="password" value="<%= user.password %>">
                                           <i class="bi bi-eye-slash passwordEye" id="togglePassword"></i>
                                   <input type="password" class="form-control mt-3 enField"
                                     placeholder="تکرار کلمه عبور" name="confirmPassword" id="confirmPassword" value="<%= user.password %>">
                                     <i class="bi bi-eye-slash confirmPasswordEye" id="toggleConfirmPassword"></i> 
                                </div>
                    
                                    <div class="col-8 mt-2 mx-5">
                                        <input type="submit" value="ویرایش" class="mt-3 btn btn-success w-100">
                                    </div> 
                                </div>                                    
                                </div>
                            </div>
                        </form>
                      </div>
                    </div>
                </div>
            </div>
        </div>
     </div>
    <footer>
    </footer>
</body>
</html>

<script>
    const togglePassword = document.querySelector("#togglePassword");
     const password = document.querySelector("#password");

     togglePassword.addEventListener("click", function () {
         // toggle the type attribute
         const type = password.getAttribute("type") === "password" ? "text" : "password";
         password.setAttribute("type", type);
         
         // toggle the icon
         this.classList.toggle("bi-eye");
     });
</script>

<script>
    const toggleConfirmPassword = document.querySelector("#toggleConfirmPassword");
    const confirmPassword = document.querySelector("#confirmPassword");

    toggleConfirmPassword.addEventListener("click", function () {
        // toggle the type attribute
        const type = confirmPassword.getAttribute("type") === "password" ? "text" : "password";
        confirmPassword.setAttribute("type", type);
        
        // toggle the icon
        this.classList.toggle("bi-eye");
    });
</script>

