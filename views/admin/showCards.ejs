<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/admin/general.css">
    <link rel="stylesheet" href="/css/admin/showLists.css">
    <title>‍ پنل مدیریت </title>
</head>
<body>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
     integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
     crossorigin="anonymous">
    </script>

    <header>
        <%- include('../components/adminNavbar') -%>
    </header>

    <div class="container container-fluid">
        <div class="row">
            <%- include('../components/adminLeftMenu') -%>

            <script>
                document.getElementById('showCards').style.backgroundColor = "rgba(4, 37, 36, 0.986)"
                document.getElementById('showCards').borderRadius = "5px"
            </script>

                <div class="col-10">
                    <div class="col-11 mx-5 counter">
                        <div class="titleCounter">
                            <p>پیشخوان  > کارت ها  </p>
                        </div>
                        <div class="d-flex justify-content-start parsianDate">
                           <p><%= persianDate %></p>
                        </div>
                    </div>
    
    
                    <div class="addAdmin col-11 my-5 mx-5">
                        <div class="addtitle my-3 mx-2 col-8">
                            <img src="/icons/users-black.svg"  alt="کارت ها">
                            کارت ها
                        </div>
                        
                        <div class="my-3 position-absolute col-8">
                            <table class="table table-bordered my-5 mx-5 col-12 text-center align-middle">
                                <thead>
                                  <tr>
                                    <th class="col-1" scope="col">#</th>
                                    <th class="col-3" scope="col"> دسته بندی محصول </th>
                                    <th class="col-3" scope="col"> عنوان محصول </th>
                                    <th class="col-3" scope="col"> وضعیت </th>
                                    <th class="col-3" scope="col"> عملیات </th>
                                  </tr>
                                </thead>
                                <tbody>
    
                                <% cards.forEach((card, i) => {%>
                                   
                                    <tr>
                                        <td><%= ++i %></td>
                                        <td><%= card.cardCategory %></td>
                                        <td class="enField"><%= card.cardProduct %></td>
                                        <td><%= card.cardStatus %></td>
                                        <td>
                                            <div class="container">
                                                <div class="row justify-content-center">
                                                  <div class="col-4">
                                                    <a href="/admin-cPanel/card/editCard/<%= card.id %>" class="btn btn-success" role="button">
                                                        <img src="/icons/edit.svg" alt="edit">
                                                    </a>   
                                                  </div>
                                                  <div class="col-4">
                                                    <form action="/admin-cPanel/card/showCards/<%= card.id %>
                                                        ?_method=DELETE" method="POST">
                                                        <button type="submit" class="btn btn-danger">
                                                            <img src="/icons/trash-2.svg" alt="remove">
                                                        </button>
                                                    </form>
                                                </div>
                                                </div>
                                              </div>
                                        </td>
                                    </tr>
                                <% }) %>
    
                                </tbody>
                              </table>
                        </div>      
                    </div>
                </div>

            </div>
        </div>
       </div>
     </div>
    <footer>
    </footer>
</body>
</html>

<script>
    const accHeading = document.querySelectorAll(".accordion");
    const accPanel = document.querySelectorAll(".accordion-panel");

    for (let i = 0; i < accHeading.length; i++) {
        // Execute whenever an accordion is clicked 
        accHeading[i].onclick = function() {
            if (this.nextElementSibling.style.maxHeight) {
            hidePanels();     // Hide All open Panels 
            } else {
            showPanel(this);  // Show the panel
            } 
        }
    }
</script>

<script>
     window.addEventListener('load', ()=> {
            showPanel(accHeading[4])
        }
    )
</script>

<script>
      // Function to Show a Panel
      function showPanel(elem) {
    hidePanels();
    elem.classList.add("active");
    elem.nextElementSibling.style.maxHeight = elem.nextElementSibling.scrollHeight + "px";
    }
</script>
<script>
     // Function to Hide all shown Panels
     function hidePanels() {
    for (let i = 0; i < accPanel.length; i++) {
        accPanel[i].style.maxHeight = null;
        accHeading[i].classList.remove("active");
    }
    }
</script>


