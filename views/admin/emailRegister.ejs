    <script>
      tinymce.init({
        selector: 'textarea#editor',
        directionality: "rtl",
        skin: 'bootstrap',
        plugins: 'lists, link, image, media',
        toolbar: 'h1 h2 bold italic alignleft aligncenter alignright alignjustify | outdent indent | removeformat help',
        menubar: false,
      });
      
    </script>        
        <script>
          tinymce.init({
            selector: 'textarea#editor',
          });
        </script>

    <title>‍ پنل مدیریت </title>
</head>
<body>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
     integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
     crossorigin="anonymous">
    </script>

    <header>
        <%- include('../components/adminNavbar') -%>
    </header>

    <div class="container container-fluid">
        <div class="row">
            <%- include('../components/adminRightMenu') -%>

            <div class="col-10">
                <div class="col-11 mx-5 counter">
                    <div class="titleCounter">
                        <p>پیشخوان  >  ایمیل ها  >  افزودن  ایمیل</p>
                    </div>
                    <div class="d-flex justify-content-start parsianDate">
                       <p><%= persianDate %></p>
                    </div>
                </div>

                <div class="addAdmin col-11 my-5 mx-5">
                    <%- include('../components/validationError') -%>
                    <div class="addtitle my-3 mx-2 col-8">
                        <img src="/icons/plus-square-black.svg"  alt="افزودن ایمیل  ">
                        افزودن  ایمیل
                    </div>
               
                    <div class="addBody col-8 mx-5">
                        <form action="/admin-cPanel/email/newEmail" method="post">
                          <div class="row">
                            <div class="row mx-1 titleWidth">
                                <input type="text" name="title" class="form-control" id="emailTitle" placeholder="عنوان ایمیل">
                            </div>
                            <div class="row">
                                <div class="form-group mt-3">
                                    <textarea name="description" id="editor" class="form-control" cols="30" rows="10"></textarea>
                                </div>
                                <div class="mt-1 mx-5">
                                    <div class="col-10 mt-5 mx-5">
                                        <input type="submit" value="ثبت ایمیل" class="mt-3 btn btn-success w-100">
                                    </div> 
                                </div> 
                            </div>
                          </div>
                        </form>
                             </div>
                        </div>
                    </div>
                </div>
            </div>
     </div>
    <footer>
    </footer>
</body>
</html>
