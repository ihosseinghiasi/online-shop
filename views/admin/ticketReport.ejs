                    const barColors = [
                        "#2b5797",
                        "#00aba9",
                        "#b91d47",
                    ];

                    new Chart("myChart", {
                    type: "polarArea",
                    data: {
                        labels: xValues,
                        datasets: [{
                        backgroundColor: barColors,
                        data: yValues
                        }]
                    },
                    options: {
                        title: {
                        display: true,
                        text: "گزارش تیکت های ارسالی"
